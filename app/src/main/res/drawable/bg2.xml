<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="80dp"
    android:height="70dp"
    android:viewportHeight="70"
    android:viewportWidth="80">

    <path
        android:fillType="nonZero"
        android:pathData="m0,0 L80,0 L40,70 z"
        >

        <aapt:attr name="android:fillColor">
            <gradient
                android:endX="0"
                android:endY="90"
                android:startX="0"
                android:startY="0"
                android:type="linear"
                >
                <item
                    android:color="#1485FD"
                    android:offset="0" />
                <item
                    android:color="#00BCD4"
                    android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>
</vector>